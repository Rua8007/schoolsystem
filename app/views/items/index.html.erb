<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Shopcategory</th>
      <th>Size</th>
      <th>Price</th>
      <th>Grade</th>
      <th>Sold</th>
      <th>Left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.code %></td>
        <td><%= item.name %></td>
        <td><%= item.shopcategory_id %></td>
        <td><%= item.size %></td>
        <td><%= item.price %></td>
        <td><%= item.grade_id %></td>
        <td><%= item.sold %></td>
        <td><%= item.left %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

