<style type="text/css">
  .container{
    width: 100% !important;
  }

  .sss{
    border:1px solid#e5e5e5;    
  }

  .lll{
    width: auto !important; 
    background-color: white;
    padding-right: 16px;
    padding-left: 15px;
    border: 1px solid;
    border-color: #729F32;
    border-radius: 21px;
  }
</style>


<%= form_for(@exam) do |f| %>
  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
      <% @exam.errors.full_messages.each do |message| %>
        <li style="color: red;"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />
  <div class="container form-holder">
    <div class="container">
        <fieldset class="sss well well-lg">
          <legend class="lll">Create Exam</legend>
            <div class="form-group col-md-6">
              <%= f.label :name %>
              <%= f.text_field :name, :style => 'height:34px;',  class: 'form-control', required: true %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :batch_id %>
              <%= f.collection_select :batch_id , Batch.all.order(:name), :id , :name,{},{:style => 'height:34px;',  class: 'form-control', required: true} %>
            </div>
            <div class="form-group col-md-6">
              <label>Start Date</label>
              <%= f.text_field :start_date, :style => 'height:34px;',  class: 'form-control data-picker', required: true %>
            </div>

            <div class="form-group col-md-6">
              <label>End Date</label>
              <%= f.text_field :end_date, :style => 'height:34px;',  class: 'form-control data-picker', required: true %>
            </div>
            <div class="form-group col-md-12">
              <%= f.label :grade_id %>
              <%= f.collection_select :grade_id , Grade.where(section: nil).order(:name), :id , :name,{},{:style => 'height:34px;',  class: 'form-control', required: true} %>
            </div>
        </fieldset>
      </div>
    </div>
  <div class="actions pull-right">
    <%= f.submit 'Next', class: "btn btn-success" %>
  </div>
<% end %>

<script type="text/javascript">
  $(".data-picker").datepicker();
</script>
