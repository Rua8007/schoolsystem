<script type="text/javascript">
  $(document).ready(function() {
    $('#example thead th').each( function (i, v) {
      // var title = $('#example tfoot th').eq( $(this).index() ).text();
      var title = $(this).text();
      if(title != "Actions"){
        $(this).html(
        '<input type="text" style = "width:inherit; color:black" id="exampleInputName2" placeholder="'+title+'">'
        );
      }
      else{
          $(this).html('<div style="width: 115px;">' + title + '</div>');
      }
    });

    // DataTable
    var table = $('#example').DataTable();

    // Apply the search
    table.columns().eq( 0 ).each( function ( colIdx ) {
        $( 'input', table.column( colIdx ).header() ).on( 'keyup change', function () {
            table
                .column( colIdx )
                .search( this.value )
                .draw();
        } );
    } );
  });

</script>
<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Students
  <% if current_user.role.rights.where(value: "create_student").any? %>
    <a href="<%= new_student_path %>" class="btn pull-right btn-color" style="width:200px;">Admit a new Student</a></h1>
  <% end %>
</div>

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content login-modal">
      <div class="modal-header login-modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title text-center" id="loginModalLabel">Student Information</h4>
      </div>
      <div class="modal-body">
        <div id="create_parties">
          <%# render "detail" %>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>

<div style="overflow: scroll">
  <table id="example" class="table table-striped table-bordered table-responsive" style="overflow: scroll">
    <thead class= "table-head" style="width: 10px">
      <tr>
        <th style="width:40px">ID</th>
        <th style="width:60px">Full Name</th>
        <th style="width:60px">Father Name</th>
        <th style="width:60px">Email</th>
        <th style="width:60px">Grade</th>
        <th style="width:50px">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.try(:each) do |student| %>
        <tr class = "clickable" id="<%= student.id %>">
          <td>
            <%= student.rollnumber %>
          </td>
          <td>
            <%= student.fullname  %>
          </td>
          <td>
            <%= student.parent.name || '' if student.parent.present? %>
          </td>
          <td>
            <%= student.email %>
          </td>
          <td>
            <%= student.grade.full_name || '' if student.grade.present? %>
          </td>
          <td>
            <% if current_user.role.rights.where(value: "view_student").any? %>
              <%= link_to '', student,:class =>  'btn btn-success  glyphicon glyphicon-ok-circle' %>
            <% end %>
            <% if current_user.role.rights.where(value: "update_student").any? %>
              <%= link_to '', edit_student_student_path(student),:class => ' btn btn-info  glyphicon glyphicon glyphicon-pencil bcc',style: "width:40px;" %>
            <% end %>

            <% if current_user.role.rights.where(value: "delete_student").any? %>
              <%= link_to '', student, method: :delete, data: { confirm: 'Are you sure?' } ,:class =>  'btn btn-danger glyphicon glyphicon glyphicon-trash'%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <button id = "modalbutton" data-toggle = "modal" data-target = "#loginModal" style="display: none;" onclick="javascript:;"></button>

