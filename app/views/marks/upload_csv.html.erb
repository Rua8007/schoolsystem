<style type="text/css">
  .container{
    width: 100% !important;
  }

  .sss{
    border:1px solid#e5e5e5;
  }

  .lll{
    width: auto !important;
    background-color: white;
    padding-right: 16px;
    padding-left: 15px;
    border: 1px solid;
    border-color: #729F32;
    border-radius: 21px;
  }
</style>


<%= form_tag process_csv_path, method: :post, multipart: true do |f| %>

    <div class="container form-holder">
      <div class="container">
        <fieldset class="sss well well-lg">
          <legend class="lll">Upload Marks From CSV</legend>

          <h4 class="col-md-12">Marks Will Be Uploaded For:</h4>
          <h4 class="col-md-2">Grade: <%= @class.full_name %> </h4>
          <h4 class="col-md-2"><%= @exam.name %> </h4>
          <h4 class="col-md-4">Subject: <%= @subject.name %> </h4>
          <div class="form-group col-md-12">
            <%= label_tag :csv, 'Select CSV' %>
            <%= file_field_tag :csv, { style: 'height:34px;',  class: 'form-control', required: true } %>
            
            <%= hidden_field_tag :class_id,   @class.id %>
            <%= hidden_field_tag :exam_id,    @exam.id %>
            <%= hidden_field_tag :subject_id, @subject.id %>
          </div>
        </fieldset>
      </div>
    </div>
    <div class="actions pull-right">
      <%= submit_tag 'Upload', class: "btn btn-success" %>
    </div>
<% end %>
