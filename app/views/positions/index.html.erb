<p id="notice"><%= notice %></p>

<div class="bg-light lter wrapper-md">
  <h1>Manage Positions</h1>
  <br/>
  <%= link_to(new_position_path, class: "btn m-b-xs btn-sm btn-primary btn-addon" ) do %>
    <i class="fa fa-plus"></i>
    New Position
  <% end %>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @positions.each do |position| %>
        <tr>
          <td><%= position.name %></td>
          <td><%= position.try(:category).try(:name) %></td>
          <td><%= link_to 'Show', position %></td>
          <td><%= link_to 'Edit', edit_position_path(position) %></td>
          <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
