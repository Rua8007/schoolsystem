<p id="notice"><%= notice %></p>

<div class="bg-light lter wrapper-md">
  <h1>Manage Departments</h1>
  <br/>
  <%= link_to(new_department_path, class: "btn m-b-xs btn-sm btn-primary btn-addon" ) do %>
    <i class="fa fa-plus"></i>
    New Department
  <% end %>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.code %></td>
          <td><%= department.name %></td>
          <td><%= link_to 'Show', department %></td>
          <td><%= link_to 'Edit', edit_department_path(department) %></td>
          <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
