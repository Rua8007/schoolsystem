<p id="notice"><%= notice %></p>


<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Manage Departments 
  <%= link_to(new_department_path, class: "btn m-b-xs btn-sm btn-primary btn-addon pull-right" ) do %>
    <i class="fa fa-plus"></i>
    New Department
  <% end %>
  </h1>
</div>
<div class="wrapper-md">


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.code %></td>
          <td><%= department.name %></td>
          <td><%= link_to 'Edit', edit_department_path(department), class: "btn btn-small btn-default" %></td>
          <td><%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
