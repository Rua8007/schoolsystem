<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Subject </h1>
</div>

<style type="text/css">
    @media(min-width: 1200px) {
        .abc {
            width: 1080px;
        }
    }
</style>
<div class="abc" style="">

    <div class="container" >
    	<div class="abc" style="">

    <div class="container" >
	
		<br>
        <div class="col-sm-6">
          <h3><%= @subject.name %></h3>
            <table class="table">
                <tbody>
                    
                    <tr>
                        <td class="student-profile-td">
                            Subject name
                        </td>

                        <td>
                            <%= @subject.name %>
                        </td>
                    </tr>

                     <tr>
                        <td class="student-profile-td">
                            Subject code
                        </td>

                        <td>
                            <%= @subject.code %>
                        </td>
                    </tr>

                   
                </tbody>
            </table>
          <% if @subject.sub_subjects.present? %>
            <h3>Sub Subjects</h3>
            <table class="table">
              <thead>
                <tr>
                  <th class="student-profile-th">Name</th>
                  <th class="student-profile-th">Code</th>
                  <th class="student-profile-th">Weightage</th>
                </tr>
              </thead>
              <tbody>
              <% @subject.sub_subjects.each do |subject| %>
                <tr>
                  <td><%= subject.name %></td>
                  <td><%= subject.code %></td>
                  <td><%= number_to_percentage subject.weight, precision:2  %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% end %>

          <%= link_to 'Back', subjects_path ,class: "btn btn-color"%>

        </div>
        </div>
        </div>
        </div>
        </div>



