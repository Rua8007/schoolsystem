<div class="nested-fields" >
  <div class="row">
    <div class="column col-xs-12 col-sm-4">
      <div class="form-group ">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, :style => 'height:34px;',  class: 'form-control' , readonly: true, required: true, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="column col-xs-12 col-sm-4">
      <div class="form-group ">
        <div class="field">
          <%= f.label :weight %><br>
          <%= f.text_field :weight ,:style => 'height:34px;',  class: 'form-control weight weight_value' , required: true, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="column col-xs-12 col-sm-2">
      <div class="form-group ">
        <div class="field">
          <%= f.check_box :take_exam ,:style => 'height:34px;',  class: 'form-control weight', autofocus: true %><span class = "pull-right"> Take Exam </span>

        </div>
      </div>
    </div>

    <div class="column col-xs-12 col-sm-4 hidden">
      <div class="form-group ">
        <div class="field">
          <%= f.label :code %><br>
          <%= f.text_field :code ,:style => 'height:34px;',  class: 'form-control' , required: true, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="column col-xs-12 col-sm-4 hidden">
      <div class="form-group ">
        <div class="field">
          <%= f.label :setting_id %><br>
          <%= f.text_field :setting_id ,:style => 'height:34px;',  class: 'form-control' , required: true, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="col-xs-2 col-sm-2">
      <%= link_to_remove_association '', f, class: 'btn btn-danger glyphicon glyphicon glyphicon-trash' %>
    </div>
  </div>
</div>