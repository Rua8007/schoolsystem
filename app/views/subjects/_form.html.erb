<style type="text/css">
  .container{
      width: auto;
  }

  .sss{
    border:1px solid#e5e5e5;   padding: 1%;
  }

  .lll{
    width: auto !important;
    background-color: white;
    padding-right: 16px;
    padding-left: 15px;
    border: 1px solid;
    border-color: #729F32;
    border-radius: 21px;
  }

  .nested-fields i{
      margin-top: 30px;
  }
</style>
<%= form_for(@subject) do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
      <% @subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="container form-holder">
    <div class="row">
      <br>
      <fieldset class="sss well well-lg">
        <legend class="lll">Subject Information</legend>
        <div class = "row">
          <div class="column col-xs-12 col-sm-5">
            <div class="form-group ">
              <div class="field">
                <%= f.label :name %><br>
                <%= f.text_field :name, :style => 'height:34px;',  class: 'form-control' , required: true, autofocus: true %>
              </div>
            </div>
          </div>
          <div class="column col-xs-12 col-sm-5">
            <div class="form-group ">
              <div class="field">
                <%= f.label :code %><br>
                <%= f.text_field :code ,:style => 'height:34px;',  class: 'form-control' , required: true, autofocus: true %>
              </div>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset class="sss well well-lg">
        <legend class="lll">Sub Subjects</legend>
        <div class = "row">
          <% if @subject.sub_subjects.present? %>
              <%= f.fields_for :sub_subjects do |sub| %>
                  <%= render 'sub_subject_fields', f: sub %>
              <% end %>
          <% end %>
          <div class="links col-sm-12">
            <%= link_to_add_association 'Add sub subjects', f, :sub_subjects %>
          </div>
        </div>
      </fieldset>

      <div class="actions">
        <%= f.submit @subject.new_record? ? 'Create' : 'Save', class: 'btn btn-block btn-success form-control', style: 'width:24%;float: right;' %>
      </div>

    </div>
  </div>

<% end %>

<style type="text/css">
    .form-holder .col-sm-4 {
      min-height: 84px;
    }
    .form-holder .form-control{
        width: 100%;
    }
    .form-control{
        border-radius: 7px;
        border: black;
    }
</style>
