  <%= link_to(new_year_plan_path, class: "btn pull-right btn-color" ,style: "width:200px;") do %>
    <i class="fa fa-plus"></i>
    Plan a New Year
  <% end %>
  </h1>
<% end %>

</div>

<div class="wrapper-md">

