  <table class="table table-striped">
    <thead>
      <tr>
        <th>Year name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @year_plans.each do |year_plan| %>
        <tr>
          <td><%= year_plan.year_name %></td>
          <td><%= link_to 'PLAN', year_plan_weeks_path(year_plan), class: "btn btn-small btn-info" %></td>

          <td><%= link_to 'Yearly Planned Curriculum', year_plan_path(year_plan), class: "btn btn-small btn-success" %></td>

          <td><%= link_to 'Weekly Planned Curriculum', weekly_schedule_year_plan_path(year_plan), class: "btn btn-small btn-success" %></td>

          <td><%= link_to 'Portions', portions_path(year_plan: year_plan), class: "btn btn-small btn-success" %></td>

          <td><%= link_to 'Lesson Plan', lessonplans_path(year_plan: year_plan), class: "btn btn-small btn-success" %></td>

          <td><%= link_to 'Curriculum Plan', curriculums_path(year_plan: year_plan), class: "btn btn-small btn-success" %></td>
          
          <% if current_user.role!= 'parent' && current_user.role!= 'teacher' && current_user.role!= 'student' %>
            <td><%= link_to 'Edit Name', edit_year_plan_path(year_plan), class: "btn btn-small btn-default" %></td>
