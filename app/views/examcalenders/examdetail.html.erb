<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Exam Information
  <% if Right.where("role_id = ? and value = 'create_excalender'", current_user.role_id ).any? %>
  <%= link_to(new_examcalender_path, class: "btn pull-right btn-color" ,style: "width:200px;") do %>
    <i class="fa fa-plus"></i>
    New Exam Calender
  <% end %>
  <%end%>
  </h1>
</div>
  <div class="container form-holder">
    <div class="row">
      <br>
      <fieldset class="sss well well-lg">
        <legend class="lll">Exam Calender</legend>
        <div class = "row">
         <%= form_tag(examdetail_examcalenders_path ,method: :get) do |f|%>
          <div class="column col-xs-12 col-sm-6">
            <div class="form-group ">
              <div class="field">
                <%= label_tag  :Grade_ID %><br>
                <%= select_tag :grade_id, options_from_collection_for_select(@grades,"id", "name"),
                  prompt: "Select Grades", class: "form-control", required: true %>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
  <div class="container form-holder">

      <div id="stp">
      </div>
  </div>

  <%end%>




<script type="text/javascript">

  $("#grade_id").change(function (e){
    console.log("i am heres");

  $.get("/examcalenders/examdata", {grade_id: $("#grade_id").val()})
    .done(function(data){
      if (data)
      {
        $("#error_div_rollnum").removeClass('hide');
        $("#error_text_rollnum").html($("#roll_Number").val() + " roll number already registered!");
        $("#roll_Number").val('');
      }
      else
      {
        $("#error_div_rollnum").addClass('hide');
      }
    });
  });




 </script> 


