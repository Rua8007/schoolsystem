<table class="table">
  <thead class="table-head">
    <tr>
      <th>Subject</th>
      <th>Grade</th>
      <th>Employee</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bridges.each do |bridge| %>
      <tr>
        <td><%= bridge.subject.name if bridge.subject.present? %></td>
        <td><%= bridge.grade.full_name if bridge.grade.present? %></td>
        <td><%= bridge.employee.full_name if bridge.employee.present? %></td>
        <td><%= link_to 'View Students', all_student_grades_path({bridge_id: bridge.id}),
                        class: 'btn btn-success' if bridge.grade.present? %>
            <%= link_to 'Enter Marks', select_subject_and_exam_path(bridge.grade.id, current_user.id),
                        class: 'btn btn-primary' if bridge.grade.present? %>

        <%#= link_to 'Edit', edit_bridge_path(bridge) %>
        <%#= link_to 'Delete', bridge, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>