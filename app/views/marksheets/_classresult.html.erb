<table class="table table-stripped">
  <thead class="table-head">
    <tr>
      <th>Student ID</th>
      <th>Student Name</th>
      <% @class.subjects.each do |s| %>
        <th><%= s.name %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @marksheet.each do |m| %>
          <td><%= m[:student_id] %></td>
          <td><%= Student.find(m[:student_id]).fullname %></td>
          <% m[:marks].try(:each) do |sub| %>
            <td> <%= sub[:marks] %> </td> 
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>