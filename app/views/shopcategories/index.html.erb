

<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Categories  </h1>
</div>

<table class="table" id="example">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopcategories.each do |shopcategory| %>
      <tr>
        <td><%= shopcategory.name %></td>
        <td><%= link_to 'Show', shopcategory %></td>
        <td><%= link_to 'Edit', edit_shopcategory_path(shopcategory) %></td>
        <td><%= link_to 'Destroy', shopcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

