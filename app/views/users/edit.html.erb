<div class="well well-lg" >
  <u><h1>Edit User</h1></u>
  <br>
  <%= form_for @user do |f| %>
    <div class="field">
      <label> Email </label>
      <%= f.email_field :email,autofocus: true, class: "form-control" , style: "width:40%", disabled: false %>
    </div>

    <div class="field">
      <label> Role </label>
      <%= f.select :role_id,options_from_collection_for_select(Role.all, "id", "name"), {} ,{class: "form-control" ,style: "width: 40%"} %>
    </div>

    <div class="actions pull-right" >
      <%= f.submit "Update User", class: "btn btn-success" %>
    </div>
  <% end %>


</div>