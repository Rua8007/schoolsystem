<%= form_tag add_user_users_path, method: :post do %>
  <div class="field">
    <label> Email </label>
    <%= email_field_tag :email,'' ,autofocus: true, class: "form-control" , style: "width:40%" %>
  </div>

  <div class="field">
    <label> Role </label>
    <%= select_tag :role_id,options_from_collection_for_select(@roles, "id", "name"), class: "form-control" ,style: "width: 40%" %>
  </div>

  <div class="field">
    <label> Password </label>
    <%= password_field_tag :password,'' ,autocomplete: "off", class: "form-control" , style: "width:40%" %>
  </div>

  <div class="field">
    <label> Confirm Password </label>
    <%= password_field_tag :password_confirmation, '',autocomplete: "off", class: "form-control" , style: "width:40%" %>
  </div>
  <div class="actions pull-right" >
    <%= submit_tag "Create User", class: "btn btn-success" %>
  </div>
<% end %>
