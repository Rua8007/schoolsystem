<div class="well well-lg" >
  <h2>Edit User Password</h2>

  <%= form_for @user do |f| %>
    <div class="field">
      <label> Password </label>
      <%= f.text_field :password,autofocus: true, class: "form-control" , style: "width:40%" %>
    </div>

    <div class="field">
      <label> Confirm Password </label>
      <%= f.text_field :password_confirmation,autofocus: true, class: "form-control" , style: "width:40%" %>
    </div>

    <div class="actions pull-right" >
      <%= f.submit "Update Password", class: "btn btn-success" %>
    </div>
  <% end %>
</div>