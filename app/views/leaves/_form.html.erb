<%= form_for(@leave) do |f| %>
  <% if @leave.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@leave.errors.count, "error") %> prohibited this leave from being saved:</h2>

      <ul>
      <% @leave.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container form-holder ">
        <div class="row">
        <fieldset class="sss well well-lg">
          <legend class="lll">Create  Leave</legend>


        <br>
            <div  class="row">
              <div class="column col-xs-12 col-sm-4">
                <div class="form-group ">
                  <div class="field ">
                    <%= f.label :reason %><br>
                    <%= f.text_field :reason,:style => 'height:34px;', cols: 70, rows: 1, class: 'form-control' , required: true, autofocus: true %>
                  </div>
                </div>
                 </div>
            <div>
              <div class="column col-xs-12 col-sm-12">
                <div class="form-group ">
                  <div class="field">
                    <%= f.label :description %><br>
                    <%= f.text_area :description ,:style => 'height:34px;', cols: 70, rows: 1, class: 'form-control' , required: true, autofocus: true%>
                  </div>
                </div>
              </div>

              <div class="field">
                <%= f.label :employee_id, style: 'display:none'  %><br>
                <%= f.number_field :employee_id, style: 'display:none'  %>
              </div>
           <div class="column col-xs-12 col-sm-5">
                <div class="form-group ">
                  <div class="field">
                    <%= f.label :leave_from %><br>
                    <%= f.datetime_select :leave_from, {class: 'form-control', required: true} %>
                  </div>
                </div>
              </div>
              <div class="column col-xs-12 col-sm-5">
                <div class="form-group  ">
                  <div class="field" >
                    <%= f.label :leave_to %><br>
                    <%= f.datetime_select :leave_to,:html=>{:class => "form-control"} %>
                  </div>
                </div>
              </div>
           </div>
              </div>
            </fieldset>
          </div>
    </div>
           <div class="modal-footer">
            <%= submit_tag 'Create', class: 'btn btn-success' %>
          </div>
<% end %>





