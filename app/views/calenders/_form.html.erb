<%= form_for(@calender) do |f| %>
  <% if @calender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calender.errors.count, "error") %> prohibited this calender from being saved:</h2>

      <ul>
      <% @calender.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="container form-holder ">
        <div class="row">
        <br>
            <div  class="row">
              <div class="column col-xs-12 col-sm-4">
                <div class="form-group ">
                  <div class="field ">
                    <%= f.label :grade %><br>
                    <%= f.select :grade,options_for_select(%w[KG1tokg3 Grade1to3 Grade4to9 ]),{prompt: 'Select Grade'}, {class: 'form-control', required: true} %>
                  </div>
                </div>
              </div>
              <div class="column col-xs-12 col-sm-8">
                <div class="form-group ">
                  <div class="field">
                    <%= f.label :title %><br>
                    <%= f.text_field :title,:style => 'height:34px;',  class: 'form-control' , required: true, autofocus: true %>
                  </div>
                </div>
              </div>
            <div>
              <div class="column col-xs-12 col-sm-12">
                <div class="form-group ">
                  <div class="field">
                    <%= f.label :description %><br>
                    <%= f.text_area :description ,:style => 'height:34px;', cols: 70, rows: 1, class: 'form-control' , required: true, autofocus: true%>
                  </div>
                </div>
              </div>
              <div class="column col-xs-12 col-sm-5">
                <div class="form-group ">
                  <div class="field">
                    <%= f.label :starttime %><br>
                    <%= f.date_select :starttime, {class: 'form-control', required: true} %>
                  </div>
                </div>
              </div>
              <div class="column col-xs-12 col-sm-5">
                <div class="form-group  ">
                  <div class="field  " >
                    <%= f.label :endtime %><br>
                    <%= f.date_select :endtime,:html=>{:class => "form-control"} %>
                  </div>
                </div>
              </div>
          </div>
        </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= submit_tag 'Create', class: 'btn btn-primary' %>
          </div>
<% end %>



