<div class="row">
  <%= render partial: 'shared/fee_navigation' %>
</div>

<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Search Student</h1>
</div>
<br><br>

<%= form_tag search_student_path, remote: true do  %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <div class="field">
            <%= label_tag 'Student Id' %>
            <%= text_field_tag :rollnumber, nil, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="form-group">
          <div class="field">
            <%= label_tag 'Student Name' %>
            <%= text_field_tag :name, nil, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="form-group">
          <div class="field">
            <%= label_tag 'Grade' %>
            <%= select_tag :grade_id, options_from_collection_for_select(Grade.where(section: nil).order('name'), :id, :name ),
                           include_blank: true, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="form-group">
          <div class="field">
            <%= label_tag 'Mobile #' %>
            <%= text_field_tag :mobile, nil, class: 'form-control' %>
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-12">
      <%= submit_tag 'Search', class: 'btn btn-success pull-right' %>
    </div>
<% end %>


<div id="student-list" style="margin-top: 10px;">

</div>
