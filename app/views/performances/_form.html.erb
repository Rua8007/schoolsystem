<%= form_for(@performance) do |f| %>
  <% if @performance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@performance.errors.count, "error") %> prohibited this performance from being saved:</h2>

      <ul>
      <% @performance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




<br>
<div class="container form-holder ">
  <div class="row">
  <fieldset class="sss well well-lg">
    <legend class="lll">Create  Performance Report</legend>
  <br>
    <div  class="row">
      <%= f.hidden_field :student_id, value: @student_id %>
      <%= f.hidden_field :bridge_id, value: @bridge_id %>
    <div>
      <div class="column col-xs-12 col-sm-12">
        <div class="form-group ">
          <div class="field">
            <%= f.label :remarks %><br>
            <%= f.text_area :remark , cols: 70, rows: 7, class: 'form-control' , autofocus: true%>
          </div>
        </div>
      </div>
    </div>




    <div style="margin-left: 30px; font-size:20px;">
      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :lc,"", class: "leave_checkbox" %>
          <i></i>Lack of concentration and/or distraction during expanation
        </label>
      </div>
      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :fa,"", class: "leave_checkbox" %>
          <i ></i>Frequent Absents/ Tardiness
        </label>
      </div>
      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :pw, "", class: "leave_checkbox" %>
          <i ></i>Poor work habbit
        </label>
      </div>
      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :lk, "", class: "leave_checkbox" %>
          <i ></i>Low skill level in basics
        </label>
      </div>
      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :ia, "", class: "leave_checkbox" %>
          <i ></i>Incomplete Assignments
        </label>
      </div>

      <div class="checkbox">
        <label class="i-checks" >
          <%= check_box :pc, "", class: "leave_checkbox" %>
          <i ></i>Poor class participation
        </label>
      </div>
    </div>

    </fieldset>
  </div>

</div>
    <div class="modal-footer">
      <%= submit_tag 'Create', class: 'btn btn-success' %>
    </div>
<% end %>










