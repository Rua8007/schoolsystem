<div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2 col-xs-3 logo1 ">
        <%= image_tag asset_path("img/logo.png"), alt: ".", class: 'img-responsive', style: "height:60px; width: 60px"%>
      </div>

      <div class="col-md-8 col-sm-8 col-xs-6 name" >
          <h3><b>Al-Omam International School</b></h3>
      </div>

      <div class="col-md-2 col-sm-2 col-xs-3 logo2">
          <!-- <img src="logo2.png" height="60" width="60"> -->
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">

      </div>
      <div class="col-md-4" style="text-align: center">
          <h3><b><u>Invoice</u></b></h3>
      </div>

      <div class="col-md-4">
      </div>
    </div>

    <div class="row">
        <div class="col-md-12 invoice">
            <h5><b>Invoice To:</b></h5>
        </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-xs-6 student">
        <table class="table table-bordered studenttable">
          <tr>
            <th>Invoice #</th>
            <td><%= @fees.first.identifier  %> </td>
          </tr>
          <tr>
             <th>Student Name:</th>
             <td><%= @student.fullname %></td>
          </tr>
          <th>Student ID:</th>
          <td>15419:</td>
          <tr>
             <th>Parent Name:</th>
             <td><%= @student.parent.name %></td>
          </tr>
          <tr>
             <th>Class:</th>
             <td><%= @student.grade.full_name%></td>
          </tr>
          <tr>
             <th>Email:</th>
             <td><%= @student.email %></td>
          </tr>
          <tr>
             <th>Address:</th>
             <td><%= @student.address %></td>
          </tr>
          <tr>
             <th>Next Due Date</th>
             <td><%= @student.due_date %></td>
          </tr>
       </table>
      </div>

        <div class="col-md-6 col-xs-6 space1">
            <table class="table table-bordered studenttable">
                <tr>
                    <th>Address:</th>
                    <td>Arrihab Dist., Tal Al Asfar, Jeddah, KSA</td>
                </tr>
                <th>Tel:</th>
                <td> 012-6746557 - 6741878</td>
                <tr>
                    <th>Fax:</th>
                    <td>012-287250
                    </td>
                </tr>
                <tr>
                    <th>Website:</th>
                    <td>aloman.edu.sa</td>
                </tr>

            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 description">
            <table class="table table-stripped">
              <tr class="linesss">
                <th>Description</th>
                <th>Total Charges</th>
                <th>Amount Paid</th>
                <% bf = 0 %>
              </tr>
              <% @fees.try(:each) do |fee| %>
                <tr>
                  <% if fee.category == 'books' %>
                    <td >Bookshop Charges</td>
                    <td></td>
                  <% else %>
                    <td ><%= fee.feebreakdown.title %></td>
                    <td ><%= fee.feebreakdown.amount %></td>
                  <% end %>
                  <td ><%= fee.amount %></td>
                </tr>
              <% end %>
              <% if @busfee.any? %>
                <%= @busfee.try(:each) do |bc| %>
                  <tr>
                    <td  >Transport Charges</td>
                    <td ><%= bc.bus_allotment.fee %></td>
                    <% bf = bf+bc.fee %>
                    <td ><%= bc.fee %></td>
                  </tr>
                <% end %>
              <% end %>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-xs-2 space">

        </div>

        <div class="col-md-5 col-xs-5 space">

        </div>

        <div class="col-md-5 col-xs-5">
            <div class="row">
                <div class="col-md-12 bottom">
                  <b>Total: &emsp;&emsp; <%= @fees.sum(:amount) + bf%></b>
                </div>
            </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-xs-5" ></div>
        <div class="col-md-5 col-xs-5" ></div>
        <div class="col-md-2 col-xs-2 button" ><button type="button" class="btn btn-success" onclick="window.print()">Print</button></div>
    </div>

    <div class="row">
        <div class="col-md-12 col-xs-12 footer">

        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-xs-12 address">
            <p>Al-Omam Int. School is fully accredited by The American International Association Accreditation for Schools & Colleges </p>

        </div>
    </div>
</div>

