                  <!--<#%= link_to_add_association 'Add sub division', f, :sub_divisions, class: 'btn btn-primary', role: 'button'  %>-->
                <!--</div>-->
              <!--</div>-->
            <!--</fieldset>-->
          <!--</div>-->
        </div>
      </div>
    </div>
<% end %>