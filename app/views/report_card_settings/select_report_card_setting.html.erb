<style type="text/css">
    .list-group-item.active{
      background-color: #57B223 !important;
      border-color: #57B223 !important;
  }

</style>
<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Edit Report Card</h1>
</div>
<br />

<div class="row">
  <div class="col-sm-12">
    <% @grades.each do |grade| %>
        <% exams = Exam.where(batch_id: Batch.last.id, grade_id: grade.id).order('name') || [] %>
        <% if exams.present? %>
            <ul class="list-group">
              <li class="list-group-item active"><%= "Grade #{grade.name}" %></li>
              <% exams.each do |exam| %>
                <li class="list-group-item">
                  <%= link_to exam.name, edit_exam_path(exam) %>
                  <% report_card = ReportCardSetting.find_by(grade_id: grade.id, exam_id: exam.id, batch_id: Batch.last.id) rescue nil %>
                  <% if report_card.present? %>
                    <%= link_to('Delete', report_card_setting_path(report_card), method: 'delete' ,
                              class: 'pull-right btn btn-danger', data: { confirm: 'Are you sure?'}) %>
                  <% else %>
                      <%= link_to('Delete', exam_path(exam), method: 'delete' ,
                                  class: 'pull-right btn btn-danger', data: { confirm: 'Are you sure?'}) %>
                  <% end %>
                </li>
              <% end %>
            </ul>
        <% end %>

    <% end %>
  </div>
</div>