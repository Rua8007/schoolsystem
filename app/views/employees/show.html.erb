
<style type="text/css">
    @media(min-width: 1200px)
.abc {
  width: 1080px;
}

</style>

<div class="abc" style="">

    <div class="container" >

        <h3><%=@employee.full_name %> </h3>
    <br>
        <div class="col-sm-4">
            <table class="table">
                <tbody>

                    <tr>
                        <td class="student-profile-td">
                            Date of Birth
                        </td>

                        <td>
                            <%= @employee.date_of_birth %>
                        </td>
                    </tr>

                    <tr>
                        <td class="student-profile-td">
                            ID Card Number
                        </td>

                        <td>
                            <%= @employee.id_card_no %>
                        </td>
                    </tr>

                    <tr>
                        <td class="student-profile-td">
                            ID Card Expiry
                        </td>

                        <td>
                            <%= @employee.id_card_expiry %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-sm-4">
            <table class="table">
                <tbody>
                    <tr>
                        <td class="student-profile-td">
                            Gender
                        </td>

                        <td>
                            <%= @employee.gender %>
                        </td>
                    </tr>

                    <tr>
                        <td class="student-profile-td">
                            Nationality
                        </td>

                        <td>
                            <%= @employee.nationality%>
                        </td>
                    </tr>



                    <tr>
                        <td class="student-profile-td">
                            Religion
                        </td>

                        <td>
                            <%= @employee.religion %>
                        </td>
                    </tr>


                </tbody>
            </table>
            <!-- <p>Section:<label>A</label></p> -->
        </div>


    </div>

    <hr />

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#ContactDetails" aria-controls="messages" role="tab" data-toggle="tab">Contact details</a></li>

        <li role="presentation" ><a href="#PreviousDetails" aria-controls="messages" role="tab" data-toggle="tab">Qualification details</a></li>
        <li role="presentation"><a href="#MedicalBackground" aria-controls="messages" role="tab" data-toggle="tab">Employee Other Details</a></li>



    </ul>

    <br>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="ContactDetails">
            <div class="col-sm-3" >
                <h4 class="student-tabs">Personal Details</h4>
                <table class="table">
                    <tr>
                        <td>
                            Address 1
                        </td>
                        <td>
                            <%= @employee.address1 %>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Address 2
                        </td>
                        <td>
                            <%= @employee.address2 %>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            City
                        </td>
                        <td>
                            <%= @employee.city %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Country
                        </td>
                        <td>
                            <%= @employee.country %>
                        </td>
                    </tr>
                     <tr>
                        <td>
                            Passport No.
                        </td>
                        <td>
                            <%= @employee.father_name %>
                        </td>
                    </tr>

                     <tr>
                        <td>
                             Passport Expiry
                        </td>
                        <td>
                            <%= @employee.mother_name %>
                        </td>
                    </tr>



                    <tr>
                        <td>
                            Phone
                        </td>
                        <td>
                            <%= @employee.home_phone %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Mobile
                        </td>
                        <td>
                            <%= @employee.mobile_number %>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            E-mail
                        </td>
                        <td>
                            <%= @employee.email %>
                        </td>
                    </tr>
                </table>
            </div>




        </div>

        <div role="tabpanel" class="tab-pane" id="PreviousDetails">
          <div class="col-sm-12">
            <table class="table">
              <tbody>
                <tr>
                  <td class="student-profile-td">
                    Qualification
                  </td>
                  <td>
                    <%= @employee.qualification %>

                  </td>

                </tr>
              </tbody>
            </table>
            <hr>

          </div>
        </div>


        <div role="tabpanel" class="tab-pane" id="MedicalBackground" >
            <div class="col-sm-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="student-profile-td">
                                Employee ID
                            </td>

                            <td>
                              <%= @employee.id %>
                            </td>
                        </tr><tr>
                            <td class="student-profile-td">
                                Employee Number
                            </td>

                            <td>
                              <%= @employee.employee_number %>
                            </td>
                        </tr>

                        <tr>
                            <td class="student-profile-td">
                                Employee Date of Joining
                            </td>

                            <td>
                              <%= @employee.date_of_joining %>
                            </td>
                        </tr>

                        <tr>
                            <td class="student-profile-td">
                                Employee Category

                            </td>

                            <td>
                              <%= @employee.category.name if @employee.category.present? %>
                            </td>
                        </tr>

                        <tr>
                            <td class="student-profile-td">
                                Employee Department
                            </td>

                            <td>
                              <%= @employee.department.name if @employee.department.present? %>
                            </td>
                        </tr>




                    </tbody>
                </table>
            </div>



        </div>

    </div>
</div>


