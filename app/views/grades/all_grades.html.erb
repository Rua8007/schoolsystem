<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3"> All Grades
</div>
<br><br>
<div style="overflow: scroll">
  <table id="example" class="table table-striped table-bordered table-responsive" style="overflow: scroll">
    <thead class= "table-head">
    <tr>
      <th>Grade</th>
      <th>No. of students</th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= link_to grade.name, grades_path({grade_name: grade.name}) %></td>
        <td><%= Student.where(grade_id: Grade.where(name: grade.name)).count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>