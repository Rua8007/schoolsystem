<style>
  .subject-name{
      font-size: 18px;
  }
  hr{
      margin-top: 10px;
      margin-bottom: 10px;
  }
</style>
<%= form_tag subject_add_grade_path(@grade.id), method: 'POST' do %>

<div class="container">
  <div class="row"><h3>Select Subjects</h3></div>
  <% @subjects.try(:each) do |sub| %>
    <div class="row">
      <% if sub.sub_subjects.present? %>
        <h4><%= sub.name %><%= @grade.id %></h4>
      <% else %>
          <div class="col-md-3 col-sm-4">
            <%= check_box_tag "flags[#{sub.id}][check]",'' , @grade.associations.where(subject_id: sub.id).any? , class: 'checkbox1 select-subject' %>&nbsp <span class="subject-name"><%= sub.name %></span>
          </div>
          <div class="col-sm-2 col-md-2"></div>
          <div class="col-md-4 col-sm-4">
            <% @association = @grade.associations.where(subject_id: sub.id).first %>
            <%= text_field_tag "flags[#{sub.id}][lectures]",'' , class: 'form-control numeric', placeholder: 'Lec. Per Week.', value: @association.try(:lectures) %>
          </div>
      <% end %>
    </div>
    <div class="row">
        <% sub.sub_subjects.try(:each) do |s| %>
          <div class="col-md-4">
            <div class="col-md-12 col-sm-12">
              <%= check_box_tag "flags[#{s.id}][check]",'' , @grade.associations.where(subject_id: s.id).any? , class: 'checkbox1' %>&nbsp <%= s.name %>
            </div>
            <% @association = @grade.associations.where(subject_id: s.id).first %>
            <div class="col-md-12 col-sm-12">
              <%= text_field_tag "flags[#{s.id}][lectures]",'' , class: 'form-control numeric', placeholder: 'Lec. Per Week.', value: @association.try(:lectures) %>
            </div>
          </div>
        <% end %>
    </div>
      <hr />
  <% end %>
  <div class="actions pull-right">
    <%= submit_tag 'Next', class: 'btn btn-success' %>
  </div>
</div>

<% end %>
